<div class="row">
							<div class="large-offset-1 columns large-8">

								
								<h1>Ton avis nous intéresse !</h1>
								<hr>
								
								<form action="" id="contact-form">

									<div class="row">
										<div class="columns small-12">
											<label for="contact-email">Adresse email</label>
											<input name="contact-email" type="text" id="contact-email" placeholder="Adresse email">
										</div>
									</div>

									<div class="row">
										<div class="columns small-12">
											<label for="contact-categorie">Catégorie</label>
												<select name="contact-categorie" id="contact-categorie">
													<option value="cat01">Suggestion de plat</option>
													<option value="cat02">Avis / reproche</option>
												</select>
										</div>
									</div>

									<div class="row">
										<div class="columns small-12">
											<label for="contact-text">Votre remarque</label>
											<textarea name="contact-text" id="contact-text" placeholder="Votre remarque" cols="30" rows="5"></textarea>
										</div>
									</div>

									<div class="row">
										<div class="columns small-12">
											<input type="submit" name="contact-submit" value="Envoyer" class="small radius button">
										</div>
									</div>
									
								</form>
							</div>
						</div>